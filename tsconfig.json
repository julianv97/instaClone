{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "baseUrl": "./",
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "paths": {
      "@components/*": ["src/components/*"]
    }
  },
  "exclude": [
    "node_modules",
    ".history",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "__tests__"
  ]
}
