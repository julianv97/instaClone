{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "baseUrl": "./",
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@helpers/*": ["src/helpers/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@navigation/*": ["src/navigation/*"],
      "@redux/*": ["src/redux/*"],
      "@screens/*": ["src/screens/*"],
      "@customTypes/*": ["src/customTypes/*"]
    }
  },
  "exclude": [
    "node_modules",
    ".history",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "__tests__"
  ]
}
